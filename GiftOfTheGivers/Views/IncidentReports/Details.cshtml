@model GiftOfTheGivers.Models.IncidentReport
@{
    ViewData["Title"] = "Incident Details";
}
<h3>Incident Details</h3>

<div class="card p-3">
    <p><strong>Type:</strong> @Model.IncidentType</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Urgency:</strong> @Model.UrgencyLevel</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Date:</strong> @Model.ReportDate.ToString("g")</p>
    <p><strong>Reported By:</strong> @Model.ReportedByUser?.UserName</p>
</div>

<p><a class="btn btn-secondary" asp-action="Index">Back to list</a></p>
