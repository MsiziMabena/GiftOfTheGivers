@model IEnumerable<GiftOfTheGivers.Models.Donation>
@{
    ViewData["Title"] = "Donations";
}

<h2>Donations</h2>
<p><a class="btn btn-success" asp-action="Create">Add Donation</a></p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr><th>Resource</th><th>Quantity/Description</th><th>Pickup</th><th>Date</th><th>Donor</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.ResourceType</td>
                <td>@d.QuantityDescription</td>
                <td>@d.PickupLocation</td>
                <td>@d.DonationDate.ToString("g")</td>
                <td>@d.DonorName</td>
                <td><a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@d.DonationId">Details</a></td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">No donations recorded yet.</div>
}
