@model IEnumerable<GiftOfTheGivers.Models.VolunteerAssignment>
@{
    ViewData["Title"] = "Volunteer Assignments";
}

<h2>Volunteer Assignments</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Task Title</th>
            <th>Volunteer</th>
            <th>Assignment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.VolunteerTask?.Title</td>
                <td>@assignment.VolunteerUser?.UserName</td>
                <td>@assignment.AssignmentDate.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">No assignments yet.</div>
}
