@model GiftOfTheGivers.Models.VolunteerTask
@{
    ViewData["Title"] = "Task Details";
}

<h2>Task Details</h2>

<div class="card p-3">
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Admin Notes:</strong> @Model.AdminNotes</p>
</div>

@if (User.Identity!.IsAuthenticated)
{
    <form asp-controller="VolunteerAssignments" asp-action="Create" method="post">
        <input type="hidden" name="taskId" value="@Model.TaskId" />
        <button type="submit" class="btn btn-success mt-3">Sign Up for this Task</button>
    </form>
}
else
{
    <div class="alert alert-warning mt-3">
        Please <a asp-controller="Account" asp-action="Login">login</a> to sign up for this task.
    </div>
}

<p><a class="btn btn-secondary mt-3" asp-action="Index">Back to list</a></p>
